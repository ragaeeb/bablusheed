{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CodePacker",
  "version": "0.1.0",
  "identifier": "com.codepacker.app",
  "build": {
    "beforeDevCommand": "bun run vite:dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run vite:build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "CodePacker",
        "width": 1280,
        "height": 800,
        "minWidth": 960,
        "minHeight": 640,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["**"]
      }
    },
    "dialog": {},
    "store": {},
    "clipboard-manager": {}
  }
}
