{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": { "noUnusedVariables": "warn" },
      "style": { "useConst": "error", "useTemplate": "error" }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5"
    }
  },
  "files": {
    "includes": [
      "src/**",
      "*.ts",
      "*.tsx",
      "*.js",
      "*.json",
      "!!**/node_modules",
      "!!**/dist",
      "!!**/src-tauri/target",
      "!!**/src-tauri/gen"
    ]
  }
}
